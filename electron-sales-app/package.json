{
  "name": "electron-sales-manager",
  "version": "1.0.0",
  "description": "Desktop Sales Management Application with Excel Integration",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:renderer\"",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:renderer": "tsc -p tsconfig.renderer.json --watch",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.dalid.salesmanager",
    "productName": "DALID Sales Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*.html",
      "src/renderer/**/*.css",
      "src/renderer/**/*.js",
      "src/renderer/**/*.json",
      "node_modules/chart.js/dist/chart.umd.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/chart.js/dist",
        "to": "chart.js",
        "filter": ["chart.umd.js"]
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  },
  "keywords": [
    "electron",
    "sales",
    "inventory",
    "excel",
    "typescript"
  ],
  "author": "Sales Manager Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/papaparse": "^5.3.16",
    "@types/pdfkit": "^0.17.3",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "exceljs": "^4.4.0",
    "papaparse": "^5.5.3",
    "pdfkit": "^0.17.2"
  }
}
